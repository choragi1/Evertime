  <body>

    <%- include('nav.html')  %>
     

  <div class="container">
    <!-- mt-4,pt-4 margintop,paddingtop을 숫자에 비례해서 준다(1~5) -->
     <div class="card w-100 mt-4 text-left">
      <div class="card-body">
        <h4>상세 페이지</h4>
        <h5 class="card-title"><%=post.글제목 %></h5>
        <p class="card-text"><%=post.글내용 %></p>
        <a class="card-link btn btn-success" href="/edit/<%=post._id%>">수정</a>
        <button class="btn btn-primary" id="like">추천</button>
      </div>
    </div>
  </div>


  </body>
