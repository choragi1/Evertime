  <body>

        <!-- 로그인 모달창 -->
        <div class="login-bg">
            <div class="login-modal">
                <form>
                    <div class="form-group">
                        아이디
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        비밀번호
                        <input type="password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">로그인</button>
                    <button type="button" class="loginCancle btn btn-danger">닫기</button>
                </form>
            </div>
        </div>
    


        <%- include('nav.ejs')  %>


          <div class="container jumbotron">
            
            <div class="errMsg">
              <h2 class="display-4 m-2">Error 404</h2><br>
              <p class="lead display-6 m-1">존재하지 않는 페이지입니다. 올바른 주소로 다시 접속해주세요.</p>
              <a class="btn btn-primary btn-lg m-1" href="/">메인으로 돌아가기</a>
            </div>
            <img src="../public/img/baeyoob.gif" class="" alt="...">
          </div>
            
                   
          




      <script>

        // 로그인 모달창 변수지정
        let loginModal = $('.login-bg');

        // 로그인 버튼 클릭시 로그인 모달 출력
          $('.login').click(()=>{
            if(loginModal.hasClass('slidedown')){
                loginModal.removeClass('slidedown');
            }else if(loginModal.hasClass('slideup')){
                loginModal.removeClass('slideup');
            }
                loginModal.addClass('slidedown');
            }) 
         
        
        // 로그인 모달창 내 취소 버튼 클릭시 로그인 모달 사라짐
            $('.loginCancle').click(()=>{
            if(loginModal.hasClass('slideup')){
                loginModal.removeClass('slideup');
            }else if(loginModal.hasClass('slidedown')){
                loginModal.removeClass('slidedown');
            }
                loginModal.addClass('slideup');
            }) 

          

      </script>

      <!-- 로그인 버튼 클릭 시 애니메이션 -->
      <%- include('loginani.ejs') %>


  </body>
