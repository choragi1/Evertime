    <title>로그인 실패</title>
  </head>
  <body>


        <%- include('login.ejs')  %>
        <%- include('nav.ejs')  %>


          <div class="container jumbotron">
            
            <div class="errMsg">
              <h2 class="display-4 m-2">로그인 에러</h2><br>
              <p class="lead display-6 m-1">로그인에 실패했습니다. 다시 로그인 해주세요.</p>
              <a class="btn btn-primary btn-lg m-1" href="/">메인으로 돌아가기</a>
            </div>
            <img src="../public/img/baeyoob.gif" class="" alt="...">
          </div>
            
                   
          




      <script>

        setTimeout("location.href='/'", 3000);


        // 로그인 모달창 변수지정
        let loginModal = $('.login-bg');

        // 로그인 버튼 클릭시 로그인 모달 출력
          $('.login').click(()=>{
            if(loginModal.hasClass('slidedown')){
                loginModal.removeClass('slidedown');
            }else if(loginModal.hasClass('slideup')){
                loginModal.removeClass('slideup');
            }
                loginModal.addClass('slidedown');
            }) 
         
        
        // 로그인 모달창 내 취소 버튼 클릭시 로그인 모달 사라짐
            $('.loginCancle').click(()=>{
            if(loginModal.hasClass('slideup')){
                loginModal.removeClass('slideup');
            }else if(loginModal.hasClass('slidedown')){
                loginModal.removeClass('slidedown');
            }
                loginModal.addClass('slideup');
            }) 

          

      </script>

      <!-- 로그인 버튼 클릭 시 애니메이션 -->
      <%- include('loginani.ejs') %>


