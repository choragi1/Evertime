<!doctype html>
<html>
  <head>
<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<!-- Bootstrap CSS,JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

<!-- CSS -->
<link rel="stylesheet" href="/public/css/total.css" >

<!-- JQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <title>자유게시판 관리</title>
  </head>
  <body>
    
    <%- include('login.ejs')  %>
    <%- include('nav.ejs')  %>
     
    
    <h4 class="ml-2 my-3 text-center font-weight-bold">자유게시판</h4>
    <ul class="text-center font-weight-bold header list-group list-group-horizontal justify-content-center">
      <li class="list-group-item" style="width: 6%">No</li>
      <li class="list-group-item" style="width: 20%">글제목</li>
      <li class="list-group-item" style="width: 10%">댓글수</li>
      <li class="list-group-item" style="width: 10%">작성자</li>
      <li class="list-group-item" style="width: 10%">조회수</li>
      <li class="list-group-item" style="width: 10%">추천</li>
      <li class="list-group-item" style="width: 15%">작성일</li>
      <li class="list-group-item" style="width: 10%">관리</li>
    </ul>
      <% for(var i=0;i<post.length;i++){ %>
        <ul class="postlist list-group list-group-horizontal justify-content-center text-center">
          <li class="post-content list-group-item" style="width: 6%"><%= post[i]._id %></li>
          <a class="post-content list-group-item" style="width: 20%" href="/detail/free/<%= post[i]._id %>"><%= post[i].post_title %></a>
          <li class="post-content list-group-item" style="width: 10%"><%= post[i].commentcnt %></li>
          <li class="post-content list-group-item" style="width: 10%"><%= post[i].writer %></li>
          <li class="post-content list-group-item" style="width: 10%"><%= post[i].viewcounts %></li>
          <li class="post-content list-group-item" style="width: 10%">추천</li>
          <li class="post-content list-group-item" style="width: 15%"><%= post[i].date %></li>
        <li class="list-group-item" style="width: 10%">
          <button class="post_update btn-primary">수정</button>
          <button class="post_delete btn-danger" data-id="<%= post[i]._id %>">삭제</button>
        </li>
      </ul>
      <% }; %>
    
      

      <script>
        
        $('.post_delete').click(function(e){
          flag=confirm('해당 게시글을 삭제하시겠습니까?');
          if(flag==true){
          var postno = e.target.dataset.id;

          $.ajax({
          method : 'DELETE',
          url : '/deletepost',
          data : {_id : postno}
        }).done(function(result){
          console.log('서버 연결에 성공했습니다.');
          $(this).parents('ul').fadeOut;
          

          // textStatus : 에러코드, errorThrown : 에러메세지
        }).fail(function(xhr,textStatus,errorThrown){
          console.log(xhr,textStatus,errorThrown);
        });
      };
    })
        


      </script>


  </body>
</html>