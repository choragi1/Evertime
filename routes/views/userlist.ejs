<!doctype html>
<html>
  <head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS,JS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

  <!-- CSS -->
  <link rel="stylesheet" href="/public/css/total.css" >

  <!-- JQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <title>관리자 페이지</title>
  </head>
  <body>
    
    <%- include('login.ejs')  %>
    <%- include('nav.ejs')  %>
     
    
      <h4 class="ml-2 my-3 ">회원 리스트</h4>
      
      <table class="table table-hover text-center">
        <thead>
          <tr>
        <th scope="col" style="width: 8%">회원번호</th>
        <th scope="col" style="width: 8%">아이디</th>
        <th scope="col" style="width: 8%">이름</th>
        <th scope="col" style="width: 11%">이메일</th>
        <th scope="col" style="width: 11%">가입일</th>
        <th scope="col" style="width: 11%">등급</th>
        <th scope="col" style="width: 12%">관리</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0;i<member.length;i++){ %>
        <tr>
      <ul class="memberlist list-group list-group-horizontal justify-content-center">
        <td style="width: 8%" id="board-post"><%= member[i]._id %></td>
        <td style="width: 8%" id="board-post"><%= member[i].id %></td>
        <td style="width: 8%" id="board-post"><%= member[i].name  %></td>
        <td style="width: 11%" id="board-post"><%= member[i].email %></td>
        <td style="width: 11%" id="board-post"><%= member[i].joinDate %></td>
        <td style="width: 11%" id="board-post"><%= member[i].auth %></td>
        <td style="width: 12%" id="board-post">
            <select id="auth-select-<%=i%>">
                <option>일반회원</option>
                <option>관리자</option>
                <option>운영자</option>
              </select>
              <button class="btn btn-sm btn-outline-primary change-auth" data-no="<%=i%>" data-id="<%= member[i]._id%>">변경</button>
          <button class="user_delete btn-danger" data-id="<%= member[i]._id %>">탈퇴</button>
        </td>
      </tr>
      <% }; %>
    </tbody>
  </table>

  <div class="justify-content-center">
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center">
        
        <% if(page!=1){ %>
        <li class="page-item mt-2"><a class="page-link" id="page-first" href="/manage/users/1"> << </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-prev" href="/manage/users/<%=page-5%>"> < </a></li>
        <% } else { %>
        <li class="page-item mt-2"><a class="page-link" id="page-first"> << </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-prev"> < </a></li>
          <% } %>
        <% if(endPage > totalPage){ %>
          <% endPage = totalPage} %>
        <% for(let i=startPage;i<=endPage;i++){ %>
          <% if(i == page){%>
          <li class="page-item mt-2"><a class="page-link" id="page-<%=i%>"><b><%=i%></b></a></li>
          <% }else{ %>
          <li class="page-item mt-2"><a class="page-link" id="page-<%=i%>" href="/manage/users/<%=i%>"><%=i%></a></li>
        <% } %>
        <% }%>
      
        <% if(page!=totalPage){ %>
        <li class="page-item mt-2"><a class="page-link" id="page-next" href="/manage/users/<%=page+5%>"> > </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-last" href="/manage/users/<%=totalPage%>"> >> </a></li>
        <% } else { %>
          <li class="page-item mt-2"><a class="page-link" id="page-next"> > </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-last"> >> </a></li>
          <% } %>
      </ul>
    </nav>
  </div>
    
      

      <script>
        
        $('.user_delete').click(function(e){
          flag=confirm('해당 회원정보를 삭제하시겠습니까?');
          if(flag==true){
          // 콜백함수에 파라미터 e를 입력후 target 메서드를 통해 data-id를 호출하여 memberno 변수 선언하여 할당
          var memberno = e.target.dataset.id;
          //ajax 통신을 통해 삭제 구현
          $.ajax({
          method : 'DELETE',
          url : '/member/del',
          data : {_id : memberno}
        }).done((data, textStatus, xhr) => {
          alert(data)
          history.go();
        }).fail(function(xhr,textStatus,errorThrown){
          console.log(xhr,textStatus,errorThrown);
          
        });
      };
    })
    
    $(".change-auth").click((e)=>{
      let datano = e.target.dataset.no;
      let userID = e.target.dataset.id;
      let select = $(`#auth-select-${datano}`).val();
      let flag = false;
      flag = confirm(`해당 회원의 회원등급을 ${select}로 변경하시겠습니까?`)
      if(flag===true){
      $.ajax({
        method: "PUT",
        url: `/manage/users/${userID}`,
        data: {select : select},
        success:(data)=>{
          alert(data)
          history.go();
        }
      })
    }

      console.log(`번호:${datano}`)
      console.log(`아이디:${userID}`)
      console.log(`선택값:${select}`)
      

    })

      
        
      </script>
      
      <!-- 로그인 버튼 클릭 시 애니메이션 -->
      <%- include ("loginani.ejs") %>


  </body>
</html>