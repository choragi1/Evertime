<!doctype html>
<html>
  <head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS,JS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

  <!-- CSS -->
  <link rel="stylesheet" href="/public/css/total.css" >

  <!-- JQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <title>질답게시판 관리</title>
  </head>
  <body>
    
    <%- include('login.ejs')  %>
    <%- include('nav.ejs')  %>
     
    
    <h4 class="ml-2 my-3 text-center font-weight-bold">질답게시판</h4>
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th scope="col" style="width: 6%">No</li>
          <th scope="col" style="width: 20%">글제목</li>
          <th scope="col" style="width: 10%">작성자</li>
          <th scope="col" style="width: 10%">조회수</li>
          <th scope="col" style="width: 10%">댓글수</li>
          <th scope="col" style="width: 10%">추천</li>
          <th scope="col" style="width: 15%">작성일</li>
          <th scope="col" style="width: 10%">관리</li>
          </tr>
      <% for(var i=0;i<qnapost.length;i++){ %>
        <ul class="qnapostlist list-group list-group-horizontal justify-content-center text-center">
          <td style="width: 6%" id="board-qnapost" ><%= qnapost[i]._id %></td>
          <td style="width: 20%; cursor:pointer" id="board-qnapost" onclick="location.href='/qna/detail/<%= qnapost[i]._id %>'"><%= qnapost[i].post_title %></td>
          <td style="width: 10%" id="board-qnapost" ><%= qnapost[i].writer %></td>
          <td style="width: 10%" id="board-qnapost" ><%= qnapost[i].viewcounts %></td>
          <td style="width: 10%" id="board-qnapost" ><%= qnapost[i].commentcnt %></td>
          <td style="width: 10%" id="board-qnapost" ><%= qnapost[i].recommend %></td>
          <td style="width: 15%" id="board-qnapost" ><%= qnapost[i].date %></td>
          <td style="width: 10%" id="board-qnapost" >
          <button class="qnapost_delete btn-danger" data-id="<%= qnapost[i]._id %>">삭제</button>
          </td>
      </tr>
      <% }; %>
    </tbody>
  </table>

  <div class="justify-content-center">
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center">
        
        <% if(page!=1){ %>
        <li class="page-item mt-2"><a class="page-link" id="page-first" href="/manage/qnaboard/1"> << </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-prev" href="/manage/qnaboard/<%=page-5%>"> < </a></li>
        <% } else { %>
        <li class="page-item mt-2"><a class="page-link" id="page-first"> << </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-prev"> < </a></li>
          <% } %>
        <% if(endPage>totalPage){ %>
          <% endPage = totalPage} %>
        <% for(let i=startPage;i<=endPage;i++){ %>
          <% if(i == page){%>
          <li class="page-item mt-2"><a class="page-link" id="page-<%=i%>"><b><%=i%></b></a></li>    
          <% }else{ %>
          <li class="page-item mt-2"><a class="page-link" id="page-<%=i%>" href="/manage/qnaboard/<%=i%>"><%=i%></a></li>
        <% } %>
        <% }%>
      
        <% if(page!=totalPage){ %>
        <li class="page-item mt-2"><a class="page-link" id="page-next" href="/manage/qnaboard/<%=page+5%>"> > </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-last" href="/manage/qnaboard/<%=totalPage%>"> >> </a></li>
        <% } else { %>
          <li class="page-item mt-2"><a class="page-link" id="page-next"> > </a></li>
        <li class="page-item mt-2"><a class="page-link" id="page-last"> >> </a></li>
          <% } %>
      </ul>
    </nav>
  </div>
    
      

      <script>
        
        $('.qnapost_delete').click(function(e){
          flag=confirm('해당 게시글을 삭제하시겠습니까?');
          if(flag===true){
          var postno = e.target.dataset.id;
          $.ajax({
          method : 'DELETE',
          url : '/manage/qnapost',
          data : {_id : postno},
          success : (data) => {
            alert(data)
            $(this).parents('ul').fadeOut;
          }
        }).fail(function(xhr,textStatus,errorThrown){
          console.log(xhr,textStatus,errorThrown);
        });
      };
    })
        


      </script>

<!-- 로그인 버튼 클릭 시 애니메이션 -->
  <%- include('loginani.ejs') %>

  </body>
</html>